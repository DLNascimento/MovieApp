<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashFragment">


    <ImageView
        android:id="@+id/ImgSplashArt"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:padding="20dp"
        android:src="@drawable/splash_movie"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMovieApp"
        style="@style/MaterialAlertDialog.Material3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sc_bold"
        android:text="MOVIE APP"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ImgSplashArt"
        app:layout_constraintStart_toStartOf="@+id/ImgSplashArt"
        app:layout_constraintTop_toBottomOf="@+id/ImgSplashArt" />
</androidx.constraintlayout.widget.ConstraintLayout>